<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path 'girly.jpg' %>');"></div>


<div class="container">
<h1 class="text-center">Add a new cocktail</h1>
	<div class="row justify-content-center">
		<div class="col-12 col-lg-6">
			<%= simple_form_for (@cocktail) do |f| %>
        <%= f.input :name %>
				<%= f.input :photo, as: :file %>
  			<%= f.submit class: 'btn btn-secondary btn-sm right'%>
			<% end %>
		</div>
  </div>
</div>