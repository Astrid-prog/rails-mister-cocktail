<nav class="navbar navbar-expand-lg navbar-light bg-light"></nav>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path 'girly.jpg' %>');">
  <div class="banner-content">
    <h1>Les meilleurs cocktails ever !</h1>
    <p>Inspirez-vous et créez vos cocktails sur mesure</p>
    <%= link_to "Créez un cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div class="container">
<h2 class="text-center">Suggestions</h2>
	<div class="row justify-content-center">
		<div class="col-12 col-lg-6">
			<% @cocktails.each do |cocktail| %>
				<div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('');">
				<%= cl_image_tag cocktail.photo.key %>
        	<div class="card-description">
						<h4><%= link_to cocktail.name, cocktail_path(cocktail.id) %></h4>
					</div>
				</div>
			<% end %>
		</div>
  </div>
</div>
<div class="button">
	<div class="row justify-content-center">
		<div class="col-12 col-lg-6">
			<p><%= link_to "Ajoutez votre cocktail", new_cocktail_path, class: "btn btn-secondary btn-sm" %></p>
		</div>
	</div>
</div>