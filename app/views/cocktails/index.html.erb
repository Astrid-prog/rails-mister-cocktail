<div class="container">
<h1 class="text-center">Cocktail list</h1>
	<div class="row justify-content-center">
		<div class="col-12 col-lg-6">
			<ul>
				<% @cocktails.each do |cocktail| %>
					<li>
						<%= link_to cocktail.name, cocktail_path(cocktail.id) %>
					</li>
				<% end %>
			</ul>
			<p><%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-primary btn-sm" %></p>
		</div>
  </div>
</div>